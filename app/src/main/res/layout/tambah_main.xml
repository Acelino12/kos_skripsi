<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".tambah_class">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- text view tambah kost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/kedua"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tambah Kos"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <!-- nama kos -->
            <EditText
                android:id="@+id/namakos"
                android:layout_width="400dp"
                android:maxWidth="200dp"
                android:layout_height="48dp"
                android:hint="@string/nama_kos"
                android:autofillHints=""
                android:inputType="text"
                android:textColor="@color/black"/>

            <!-- tipe kamar -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:text="@string/kamar"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <RadioGroup
                    android:id="@+id/rgjeniskelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radio_pria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/pria"
                        android:onClick="onRadioButtonClicked"/>

                    <RadioButton
                        android:id="@+id/radio_wanita"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/wania"
                        android:onClick="onRadioButtonClicked"/>

                    <RadioButton
                        android:id="@+id/radio_campur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="@string/campuran"
                        android:onClick="onRadioButtonClicked"/>

                </RadioGroup>


            </LinearLayout>

            <!-- ukuran kamar -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:text="@string/jumlah_kamar"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/jumlahkamar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:hint="5"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:background="@drawable/text_tambah"
                        android:autofillHints=""
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:text="@string/kamar"/>

                </LinearLayout>

            </LinearLayout>

            <!-- fasilitas kamar -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:text="@string/fasilitas_kamar"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/cbac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ac"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbbantal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bantal"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbguling"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/guling"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbkasur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kasur"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cblemari"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lemari"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/cbmeja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mejabelajar"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbkursi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kursi"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbcermin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cermin"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbjendela"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jendela"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbvetilasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ventilasi"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!-- fasilitas umum -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:text="@string/fasilitas_umum"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/cbwifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wifi"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbkulkas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kulkas"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbcuci"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/r.cuci"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbjemur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/r.jemur"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/cbdapur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dapur"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbcctv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cctv"
                            android:onClick="onCheckboxClicked"/>

                        <CheckBox
                            android:id="@+id/cbpenjaga"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/penjaga"
                            android:onClick="onCheckboxClicked"/>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <!-- harga kos -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:text="@string/harga_kos"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Rp"/>

                    <EditText
                        android:id="@+id/hargakos"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:hint="@string/_1000000"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:background="@drawable/text_tambah"
                        android:autofillHints=""
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:text="@string/bulan"/>

                </LinearLayout>

            </LinearLayout>

            <!-- no hp -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    android:text="No Hp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/nohp"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:hint="085267672121"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:background="@drawable/text_tambah"
                    android:autofillHints=""
                    android:inputType="number" />

            </LinearLayout>

            <!-- button tambah -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Tambah"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>