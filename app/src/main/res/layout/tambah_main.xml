<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".tambah_class">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <!-- text view tambah kost -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/kedua"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tambah Kos"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </LinearLayout>

            <!-- nama kos -->
            <EditText
                android:id="@+id/namakos"
                android:layout_width="400dp"
                android:maxWidth="200dp"
                android:layout_height="48dp"
                android:hint="@string/nama_kos"
                android:autofillHints=""
                android:inputType="text"
                android:textColor="@color/black"/>

            <!-- jenis kamar -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/kamar"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/jeniskamar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="(pria/wanita/campuran)"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- jumlah kamar -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/jumlah_kamar"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/jumlahkamar"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:hint="5"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:background="@drawable/text_tambah"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:text="@string/kamar"/>

                </LinearLayout>

            </LinearLayout>

            <!-- fasilitas kamar -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fasilitas_kamar"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/fasilitaskamar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="(meja,lemari,bantal)"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- harga kos -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/harga_kos"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="Rp"/>

                    <EditText
                        android:id="@+id/hargakos"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:hint="@string/_1000000"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:background="@drawable/text_tambah"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:text="@string/bulan"/>

                </LinearLayout>

            </LinearLayout>

            <!-- alamat kos -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat kos"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/alamatkos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="jl. jeruk, Ancol, Jakarta Utara"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <!-- jarak kos -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:background="@drawable/tambah_background"
                android:elevation="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jarak kos ke UBM"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/jarakkos"
                        android:layout_width="100dp"
                        android:layout_height="48dp"
                        android:hint="200"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:background="@drawable/text_tambah"
                        android:inputType="number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:textStyle="bold"
                        android:text="Meter"/>

                </LinearLayout>

                <Button
                    android:id="@+id/chackjarak"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Chack jarak"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <!-- no hp -->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Hp"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/nohp"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:hint="085267672121"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:background="@drawable/text_tambah"
                    android:inputType="number" />

            </LinearLayout>

            <!-- button tambah -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp">

                <Button
                    android:id="@+id/btn_simpan"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Tambah"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>